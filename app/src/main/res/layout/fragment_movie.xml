<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".fragment.MovieFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.stx.xhb.androidx.XBanner
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:id="@+id/ban"
                app:isClipChildrenMode="true"
                ></com.stx.xhb.androidx.XBanner>


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#1c2243"
                >
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:background="@drawable/being_img"
                    android:layout_marginLeft="25dp"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="正在热映"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="54dp"
                    />

                <TextView
                    android:id="@+id/more"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:text="更多"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/rexyclerview1"
                ></androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#1c2243"
                >
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:background="@drawable/soon_img"
                    android:layout_marginLeft="25dp"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="即将上映"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="54dp"
                    />

                <TextView
                    android:id="@+id/more2"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:text="更多"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rexyclerview2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                ></androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#1c2243"
                >
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:background="@drawable/popular_img"
                    android:layout_marginLeft="25dp"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="热门电影"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="54dp"
                    />

                <TextView
                    android:id="@+id/more3"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:text="更多"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/popular_img"
                    android:layout_width="312dp"
                    android:layout_gravity="center"
                    android:layout_height="120dp"
                    ></com.facebook.drawee.view.SimpleDraweeView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rexyclerview3"
                ></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>