<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".fragment.MyFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/mybei">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="61dp"
                android:text="我的"
                android:textColor="#ffffff"
                />

        </LinearLayout>
        <ImageView
            android:src="@mipmap/xinxi"
            android:layout_width="22dp"
            android:layout_marginTop="66dp"
            android:layout_marginLeft="400dp"
            android:layout_height="17dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:layout_marginTop="114dp"
        android:id="@+id/jiacard"
        android:layout_marginLeft="50dp">

    <ImageView
        android:id="@+id/header_image"
        android:layout_marginTop="20dp"
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/wd1"
        android:layout_height="60dp" />
        <TextView
            android:text="电影故事"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/shape" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#1c2243"
        android:id="@+id/jiadianyingpiao"
        android:layout_below="@id/jiacard"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        >
        <ImageView
            android:src="@mipmap/wddyp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            android:text="电影票"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@mipmap/ww"
            android:layout_marginTop="17dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="240dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="275dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/jiadianyingpiao"
        android:orientation="vertical"
        android:background="@drawable/mybianjiao"
        >
        <RadioGroup
            android:layout_width="380dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="66dp">
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:drawableTop="@mipmap/group_2"
                android:text="我的关注"
                android:textColor="#deffffff"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_weight="1"
                ></RadioButton>
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:drawableTop="@mipmap/group_4"
                android:text="我的预约"
                android:textColor="#deffffff"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_weight="1"
                ></RadioButton>
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:drawableTop="@mipmap/goupiaojilu"
                android:text="购票记录"
                android:textColor="#deffffff"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_weight="1"
                ></RadioButton>
        </RadioGroup>

        <RadioGroup
            android:layout_width="380dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="66dp">
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:drawableTop="@mipmap/chongzhijilu"
                android:text="看过的电影"
                android:textColor="#deffffff"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_weight="1"
                ></RadioButton>
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:drawableTop="@mipmap/group_3"
                android:text="我的评论"
                android:textColor="#deffffff"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_weight="1"
                ></RadioButton>
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:drawableTop="@mipmap/yijianfankui_01"
                android:text="意见反馈"
                android:textColor="#deffffff"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_weight="1"
                ></RadioButton>
        </RadioGroup>

        <RadioGroup
            android:layout_width="380dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="66dp">
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:drawableTop="@mipmap/invalid_name"
                android:text="设置"
                android:textColor="#deffffff"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_weight="1"
                ></RadioButton>
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:layout_weight="1"
                ></RadioButton>
            <RadioButton
                android:layout_width="68dp"
                android:layout_height="66dp"
                android:button="@null"
                android:layout_weight="1"
                ></RadioButton>
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>