<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".view.ChooseatheaterActivity">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/jcvideoplayer_Chooseatheater"
        ></fm.jiecao.jcvideoplayer_lib.JCVideoPlayer>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/Chooseatheater_name"
        android:layout_below="@id/jcvideoplayer_Chooseatheater"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:text="2000000"
        android:gravity="center"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Chooseatheater_name"
        android:layout_marginLeft="24dp"
        android:textSize="12sp"
        android:text="时长"
        android:textColor="#ffffff"
        android:id="@+id/Chooseatheater_shichangj"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Chooseatheater_name"
        android:layout_marginLeft="79dp"
        android:textSize="12sp"
        android:text="评分"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/Chooseatheater_name"
        android:id="@+id/Chooseatheater_pingfenj"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Chooseatheater_name"
        android:layout_marginLeft="79dp"
        android:textSize="12sp"
        android:text="导演"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/Chooseatheater_pingfen"
        android:id="@+id/Chooseatheater_daoyanj"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Chooseatheater_shichangj"
        android:layout_marginLeft="24dp"
        android:textSize="12sp"
        android:text="111111"
        android:textColor="#ffffff"
        android:id="@+id/Chooseatheater_shichang"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Chooseatheater_pingfenj"
        android:layout_marginLeft="79dp"
        android:textSize="12sp"
        android:text="111111"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/Chooseatheater_name"
        android:id="@+id/Chooseatheater_pingfen"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Chooseatheater_daoyanj"
        android:layout_marginLeft="79dp"
        android:textSize="12sp"
        android:text="111111"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/Chooseatheater_pingfen"
        android:id="@+id/Chooseatheater_daoyan"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#1c2243"
        android:layout_below="@id/Chooseatheater_daoyan"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/lin_chooseatheater"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Chooseatheater_diqu"
            android:textSize="14sp"
            android:text="地区  ▼"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Chooseatheater_paiqi"
            android:textSize="14sp"
            android:text="排期  ▼"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Chooseatheater_jiage"
            android:textSize="14sp"
            android:text="价格最低"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_weight="1"
            ></TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/chooseatheater_sou"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:id="@+id/chooseatheater_sousuo"
            ></ImageView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chooseatheater_recycler"
        android:layout_below="@id/lin_chooseatheater"
        ></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>